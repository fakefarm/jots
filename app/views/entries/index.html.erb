<%= form_for(@entry) do |f| %>

  <div class="field">
    <%= f.text_field :title, autofocus: true, class: 'jot-entry' %>
    <%= f.submit 'jot', class: 'jot-submit' %>
  </div>
<% end %>
<hr>
<ul>
  <% @entries.each do |entry| %>
    <li><%= link_to entry.title, entry, method: :delete %></li>
  <% end %>
</ul>
